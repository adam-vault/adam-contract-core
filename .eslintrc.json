{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "hardhat": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "class-methods-use-this": "off",
        "consistent-return": "off",
        "global-require": "off",
        "no-underscore-dangle": "off",
        "prettier/prettier": "error"
    },
    "plugins": ["prettier"],
    "ignorePatterns": ["*.test.js"]
}
